# Maintainer Sheepla
pkgname=memo

pkgver=0.0.13
pkgrel=1
pkgdesc="A command line tool for taking notes"
url="https://github.com/mattn/memo"
license=("MIT")
arch=("x86_64")
depends=()
conflicts=("memo")
provides=()
replaces=()
optdepends=(
    "fzf: for select command"
    "peco: for select command"
    "the_silver_searcher: for grep command"
)

source=("${url}/releases/download/v${pkgver}/${pkgname}_v${pkgver}_linux_amd64.tar.gz")
md5sums=("82548bed3826c7aaf7dc600b40321cac")

package() {
    cd ${srcdir}/${pkgname}_v${pkgver}_linux_amd64
    install -Dm 755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"

    _licence_dir="${pkgdir}/usr/share/licenses/${pkgname}"
    install -d ${_licence_dir}
    install -Dm 644 LICENSE  ${_licence_dir}     

    _doc_dir="${pkgdir}/usr/share/doc/${pkgname}"
    install -d ${_licence_dir}
    install -Dm 644 README.md ${_doc_dir}
}
