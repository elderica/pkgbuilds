# Maintainer Sheepla
pkgname=textimg

pkgver=3.0.6
pkgrel=1
pkgdesc="Command to convert from color text (ANSI or 256) to image"
url="https://github.com/jiro4989/textimg"
license=("MIT")
arch=('x86_64')
depends=()
conflicts=()
provides=()
replaces=()
optdepends=()
source=("https://github.com/jiro4989/textimg/releases/download/v${pkgver}/textimg-linux-amd64.tar.gz")
md5sums=('6c482f6b80419b26486cbf7e05bebab2')

package() {
    # Install licence file
    curl "https://raw.githubusercontent.com/jiro4989/textimg/master/LICENSE" -o LICENCE
    install -Dm 644 LICENCE "${pkgdir}/usr/share/licenses/${pkgname}/LICENCE"

    # install binary
    install -Dm 755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}
